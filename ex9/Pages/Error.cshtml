@page
@model ErrorModel
@{
    ViewData["Title"] = "Error";
}

<div class="text-center">
    <h1 class="text-danger">404 - Page Not Found</h1>
    <h2 class="text-danger">The route you requested does not exist.</h2>
    
    <p style="margin-top: 20px;">
        <strong>Valid Routes for ex9 (POCO Controller):</strong>
    </p>
    <ul style="list-style: none; padding: 0;">
        <li><a href="/home">/home</a> - Home Controller Index</li>
        <li><a href="/home/today">/home/today</a> - Display current date and time</li>
        <li><a href="/home/http/123">/home/http/{id}</a> - Display ID number (Example: /home/http/123)</li>
    </ul>

    @if (Model.ShowRequestId)
    {
        <p style="margin-top: 20px;">
            <strong>Request ID:</strong> <code>@Model.RequestId</code>
        </p>
    }
</div>

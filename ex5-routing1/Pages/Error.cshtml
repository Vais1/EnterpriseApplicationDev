@page
@model ErrorModel
@{
    ViewData["Title"] = "Error";
}

<div class="text-center">
    <h1 class="text-danger">404 - Page Not Found</h1>
    <h2 class="text-danger">The route you requested does not exist.</h2>
    
    <p style="margin-top: 20px;">
        <strong>Valid Routes for ex5-routing1:</strong>
    </p>
    <ul style="list-style: none; padding: 0;">
        <li><a href="/Home">/Home</a> or <a href="/Home/Index">/Home/Index</a> - Home Page</li>
        <li><a href="/Home/About">/Home/About</a> - About Page</li>
        <li><a href="/shop/products">/shop/products</a> - Product List</li>
        <li><a href="/shop/products/list">/shop/products/list</a> - Product List (Alternative)</li>
        <li><a href="/shop/products/item/5">/shop/products/item/{id}</a> - Product Details</li>
    </ul>

    @if (Model.ShowRequestId)
    {
        <p style="margin-top: 20px;">
            <strong>Request ID:</strong> <code>@Model.RequestId</code>
        </p>
    }
</div>

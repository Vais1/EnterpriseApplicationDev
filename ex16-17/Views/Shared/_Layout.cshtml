<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    <style>
        body { font-family: Arial, sans-serif; margin: 20px; }
        table { border-collapse: collapse; margin: 10px 0; }
        td { padding: 8px; vertical-align: top; }
        input[type="text"], input[type="number"] { padding: 5px; margin: 2px; }
        .text-danger { color: red; font-size: 12px; display: block; }
        input[type="submit"] { padding: 8px 16px; background-color: #007bff; color: white; border: none; cursor: pointer; }
        input[type="submit"]:hover { background-color: #0056b3; }
        .employee-table { border: 1px solid #ccc; width: 100%; }
        .employee-table th, .employee-table td { border: 1px solid #ccc; padding: 8px; text-align: left; }
        .employee-table th { background-color: #f8f9fa; }
    </style>
</head>
<body>
    <div>
        @RenderBody()
    </div>
</body>
</html>
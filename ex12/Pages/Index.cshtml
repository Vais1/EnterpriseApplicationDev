@page
@model IndexModel
@{
    ViewData["Title"] = "Home";
}

<div class="container mt-5">
    <div class="row">
        <div class="col-md-8">
            <h1>@ViewData["WelcomeMessage"]</h1>
            <p class="lead">This exercise demonstrates the use of ViewData and ViewBag in ASP.NET Core Razor Pages.</p>
            
            <hr />
            
            <h3>ViewData Dictionary</h3>
            <div class="alert alert-info">
                <p><strong>Page Title:</strong> @ViewData["PageTitle"]</p>
                <p><strong>Welcome Message:</strong> @ViewData["WelcomeMessage"]</p>
            </div>
            
            <h3>ViewBag Dynamic Object</h3>
            <div class="alert alert-warning">
                <p><strong>Application Name:</strong> @ViewData["ApplicationName"]</p>
                <p><strong>Version:</strong> @ViewData["Version"]</p>
            </div>
            
            <hr />
            
            <h3>Navigation</h3>
            <div class="btn-group" role="group">
                <a href="/employees" class="btn btn-primary">View Employees</a>
                <a href="/" class="btn btn-secondary">Home</a>
            </div>
        </div>
    </div>
</div>

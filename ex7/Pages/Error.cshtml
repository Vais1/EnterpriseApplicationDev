@page
@model ErrorModel
@{
    ViewData["Title"] = "Error";
}

<div class="text-center">
    <h1 class="text-danger">404 - Page Not Found</h1>
    <h2 class="text-danger">The route you requested does not exist.</h2>
    
    <p style="margin-top: 20px;">
        <strong>Valid Routes for ex7:</strong>
    </p>
    <ul style="list-style: none; padding: 0;">
        <li><a href="/">/</a> or <a href="/Hello">/Hello</a> - Hello Controller Index</li>
        <li><a href="/Hello/Greet">/Hello/Greet</a> - Greet with default name</li>
        <li><a href="/Hello/Greet?name=Bob">/Hello/Greet?name=Bob</a> - Greet with custom name</li>
    </ul>

    @if (Model.ShowRequestId)
    {
        <p style="margin-top: 20px;">
            <strong>Request ID:</strong> <code>@Model.RequestId</code>
        </p>
    }
</div>

@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

<div class="text-center">
    <h1 class="display-4">Welcome to ex7</h1>
    <p>This application demonstrates ASP.NET Core routing with the HelloController.</p>
    
    <h2>Routing Examples</h2>
    <p>Click the links below to test the routing:</p>
    
    <ul style="list-style: none; padding: 0;">
        <li style="margin: 15px;">
            <a href="/Hello" class="btn btn-primary">Go to /Hello (HelloController.Index)</a>
            <p><small>Returns: "Hello from HelloController.Index"</small></p>
        </li>
        <li style="margin: 15px;">
            <a href="/Hello/Greet" class="btn btn-info">Go to /Hello/Greet (Default Name)</a>
            <p><small>Returns: "Hello, Guest!"</small></p>
        </li>
        <li style="margin: 15px;">
            <a href="/Hello/Greet?name=Awais" class="btn btn-success">Go to /Hello/Greet?name=Awais</a>
            <p><small>Returns: "Hello, Awais!"</small></p>
        </li>
        <li style="margin: 15px;">
            <a href="/Hello/Greet?name=Bob" class="btn btn-warning">Go to /Hello/Greet?name=Bob</a>
            <p><small>Returns: "Hello, Bob!"</small></p>
        </li>
    </ul>
    
    <hr/>
    <p><strong>Try changing the name parameter to test the routing:</strong></p>
    <p><code>/Hello/Greet?name=YourName</code></p>
</div>

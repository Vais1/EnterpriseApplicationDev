@page
@model ex18.Pages.Contacts.DetailsModel

@{
    ViewData["Title"] = "Contact Details";
}

<div class="page-header d-flex justify-content-between align-items-center flex-wrap">
    <h1>Contact Details</h1>
    <div class="d-flex gap-2">
        <a asp-page="./Edit" asp-route-id="@Model.Contact?.Id" class="btn btn-warning">Edit</a>
        <a asp-page="./Index" class="btn btn-outline-secondary">Back to List</a>
    </div>
</div>

<div class="row justify-content-center">
    <div class="col-lg-8">
        <div class="card">
            <div class="card-body p-4">
                <div class="row mb-4">
                    <div class="col-12">
                        <h2 class="h4 mb-0">@Model.Contact.FirstName @Model.Contact.LastName</h2>
                        <p class="text-muted mb-0">Added @Model.Contact.CreatedDate.ToString("MMMM dd, yyyy")</p>
                    </div>
                </div>
                
                <hr class="my-4">
                
                <dl class="row mb-0">
                    <dt class="col-sm-3 mb-3">Email</dt>
                    <dd class="col-sm-9 mb-3">
                        <a href="mailto:@Model.Contact.Email" class="text-decoration-none">@Model.Contact.Email</a>
                    </dd>
                    
                    @if (!string.IsNullOrEmpty(Model.Contact.PhoneNumber))
                    {
                        <dt class="col-sm-3 mb-3">Phone</dt>
                        <dd class="col-sm-9 mb-3">
                            <a href="tel:@Model.Contact.PhoneNumber" class="text-decoration-none">@Model.Contact.PhoneNumber</a>
                        </dd>
                    }
                    
                    @if (!string.IsNullOrEmpty(Model.Contact.Address) || !string.IsNullOrEmpty(Model.Contact.City) || !string.IsNullOrEmpty(Model.Contact.State) || !string.IsNullOrEmpty(Model.Contact.ZipCode))
                    {
                        <dt class="col-sm-3 mb-3">Address</dt>
                        <dd class="col-sm-9 mb-3">
                            @if (!string.IsNullOrEmpty(Model.Contact.Address))
                            {
                                @Model.Contact.Address<br>
                            }
                            @if (!string.IsNullOrEmpty(Model.Contact.City) || !string.IsNullOrEmpty(Model.Contact.State))
                            {
                                @Model.Contact.City@if (!string.IsNullOrEmpty(Model.Contact.City) && !string.IsNullOrEmpty(Model.Contact.State)) {<text>, </text>}@Model.Contact.State
                            }
                            @if (!string.IsNullOrEmpty(Model.Contact.ZipCode))
                            {
                                <text> @Model.Contact.ZipCode</text>
                            }
                        </dd>
                    }
                    
                    @if (!string.IsNullOrEmpty(Model.Contact.Notes))
                    {
                        <dt class="col-sm-3 mb-3">Notes</dt>
                        <dd class="col-sm-9 mb-3">
                            <p class="mb-0">@Model.Contact.Notes</p>
                        </dd>
                    }
                </dl>
            </div>
        </div>
    </div>
</div>


@page
@model ex18.Pages.Contacts.IndexModel

@{
    ViewData["Title"] = "Contacts";
}

<div class="page-header d-flex justify-content-between align-items-center flex-wrap">
    <h1>My Contacts</h1>
    <a asp-page="Create" class="btn btn-primary">New Contact</a>
</div>

@if (Model.Contact != null && Model.Contact.Any())
{
    <div class="table-responsive">
        <table class="table table-hover align-middle">
            <thead>
                <tr>
                    <th>Name</th>
                    <th>Email</th>
                    <th>Phone</th>
                    <th>Location</th>
                    <th class="text-end">Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.Contact)
                {
                    <tr>
                        <td>
                            <strong>@Html.DisplayFor(modelItem => item.FirstName) @Html.DisplayFor(modelItem => item.LastName)</strong>
                        </td>
                        <td>
                            <a href="mailto:@item.Email" class="text-decoration-none">@Html.DisplayFor(modelItem => item.Email)</a>
                        </td>
                        <td>
                            @if (!string.IsNullOrEmpty(item.PhoneNumber))
                            {
                                <a href="tel:@item.PhoneNumber" class="text-decoration-none">@Html.DisplayFor(modelItem => item.PhoneNumber)</a>
                            }
                            else
                            {
                                <span class="text-muted">—</span>
                            }
                        </td>
                        <td>
                            @if (!string.IsNullOrEmpty(item.City) || !string.IsNullOrEmpty(item.State))
                            {
                                @Html.DisplayFor(modelItem => item.City)@if (!string.IsNullOrEmpty(item.City) && !string.IsNullOrEmpty(item.State)) {<text>, </text>}@Html.DisplayFor(modelItem => item.State)
                            }
                            else
                            {
                                <span class="text-muted">—</span>
                            }
                        </td>
                        <td class="text-end">
                            <div class="btn-group" role="group">
                                <a asp-page="./Details" asp-route-id="@item.Id" class="btn btn-sm btn-outline-primary">View</a>
                                <a asp-page="./Edit" asp-route-id="@item.Id" class="btn btn-sm btn-outline-warning">Edit</a>
                                <a asp-page="./Delete" asp-route-id="@item.Id" class="btn btn-sm btn-outline-danger">Delete</a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
}
else
{
    <div class="empty-state">
        <h3 class="h4 mb-3">No contacts yet</h3>
        <p class="text-muted mb-4">Get started by creating your first contact.</p>
        <a asp-page="Create" class="btn btn-primary">Create Your First Contact</a>
    </div>
}


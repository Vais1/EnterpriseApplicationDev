@page
@model ex18.Pages.Contacts.DeleteModel

@{
    ViewData["Title"] = "Delete Contact";
}

<div class="page-header">
    <h1>Delete Contact</h1>
</div>

<div class="row justify-content-center">
    <div class="col-lg-6">
        <div class="card border-danger">
            <div class="card-body p-4">
                <div class="alert alert-warning mb-4" role="alert">
                    <strong>Warning:</strong> Are you sure you want to delete this contact? This action cannot be undone.
                </div>
                
                <div class="mb-4">
                    <h3 class="h5 mb-3">@Model.Contact.FirstName @Model.Contact.LastName</h3>
                    <dl class="row mb-0">
                        <dt class="col-sm-4">Email</dt>
                        <dd class="col-sm-8">@Model.Contact.Email</dd>
                        @if (!string.IsNullOrEmpty(Model.Contact.PhoneNumber))
                        {
                            <dt class="col-sm-4">Phone</dt>
                            <dd class="col-sm-8">@Model.Contact.PhoneNumber</dd>
                        }
                    </dl>
                </div>
                
                <form method="post">
                    <input type="hidden" asp-for="Contact.Id" />
                    <div class="d-flex gap-2">
                        <button type="submit" class="btn btn-danger">Delete Contact</button>
                        <a asp-page="./Index" class="btn btn-outline-secondary">Cancel</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>


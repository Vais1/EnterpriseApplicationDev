@page
@model ErrorModel
@{
    ViewData["Title"] = "Error";
}

<div class="text-center">
    <h1 class="text-danger">404 - Page Not Found</h1>
    <h2 class="text-danger">The route you requested does not exist.</h2>
    
    <p style="margin-top: 20px;">
        <strong>Valid Routes for ex6-routing:</strong>
    </p>
    <ul style="list-style: none; padding: 0;">
        <li><a href="/date">/date</a> - Date Index Page</li>
        <li><a href="/date/day/8">/date/day/{offset}</a> - Display date with offset (Example: /date/day/8)</li>
    </ul>

    @if (Model.ShowRequestId)
    {
        <p style="margin-top: 20px;">
            <strong>Request ID:</strong> <code>@Model.RequestId</code>
        </p>
    }
</div>
